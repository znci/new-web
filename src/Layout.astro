---
import Footer from "./components/Footer.astro";
import Header from "./components/Header.astro";
import './css/index.css';
let { title } = Astro.props;
---

<html>
<head>
    <title>znci &bull; {title}</title>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap" rel="stylesheet">
    <style>
        /* Full-screen green overlay */
        #green-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: #72D572;
            z-index: 9999;
        }
    </style>
</head>
<body class="fadeIn">
    <div id="green-overlay"></div>

    <canvas id="res-canvas"></canvas>
    <Header />
    <slot />
    <Footer />
    <script src="./scripts/index.ts"></script>
    <script src="./scripts/backgroundCanvas.ts"></script>
    <script>
        // Remove the green overlay once the page has loaded
        window.addEventListener('load', () => {
            const overlay = document.getElementById('green-overlay');
            if (overlay) {
                overlay.style.display = 'none';
            }
        });
    </script>
</body>
</html>