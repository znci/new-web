---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import logoImage from "../assets/logo.svg";
import bgvVideo from "../assets/bgv.mp4";
import MembersSection from "../components/MembersSection.astro";
import ProjectsSection from "../components/ProjectsSection.astro";
import RSSSection from "../components/RSSSection.astro";
---

<Layout title="Home">
  <div class="transition">
    <Image src={logoImage} alt="" />
  </div>

  <div class="hero">
    <video src={bgvVideo} autoplay loop muted playsinline></video>
    <div class="hero-title">Hey, we're <b>znci</b>!</div>
    <div class="hero-subtitle">
      znci is a team of developers who want to make the web just a little bit
      better.
    </div>
    <div class="hero-row">
      <a href="#projects" class="button"> Projects </a>
      <a href="#team" class="button"> About Us </a>
    </div>
  </div>

  <ProjectsSection />
  <MembersSection />
  <RSSSection />

  <section class="section centered" id="contact">
    <div class="section-title">Contact</div>
    <div class="section-content">
      <p>
        If you have any questions, concerns, or just want to say hi, feel free
        to contact us!
      </p>

      <div class="card centered">
        <div class="card-title">Contact Form</div>
        <div class="card-content">
          <p class="center-text">
            Unfortunately, the contact form has been removed due to spam and
            abuse.<br />
            If you need to contact us, please shoot us an email:
            <b><a href="mailto:hello@znci.dev">hello@znci.dev</a></b>
          </p>

